<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cài đặt báo thức"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/title_date"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/margin"
        android:text="Đặt ngày"
        />
    <EditText
        android:id="@+id/input_date"
        android:layout_below="@+id/title_date"
        android:layout_width="match_parent"
        style="@style/margin"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/title_time"
        android:layout_below="@+id/input_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/margin"
        android:text="Đặt giờ"
        />
    <EditText
        android:id="@+id/input_time"
        android:layout_below="@+id/title_time"
        android:layout_width="match_parent"
        style="@style/margin"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/title_repeat"
        android:layout_below="@+id/input_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/margin"
        android:text="Lặp lại"
        />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="149dp"
        android:layout_height="40dp"
        android:layout_below="@+id/title_repeat"
        style="@style/margin"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/btn_done_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="Xong" />


</RelativeLayout>